    "docker:build": "docker compose build",
    "docker:build:edge": "docker compose --profile edge build",
    "docker:build:node": "docker compose --profile node build",
    "docker:run": "docker compose --profile default up",
    "docker:run:edge": "docker compose --profile edge up",
    "docker:run:node": "docker compose --profile node up",
    "local:db:start": "docker compose -f docker-compose.local.yml up -d postgres",
    "local:db:stop": "docker compose -f docker-compose.local.yml down",
    "local:db:reset": "docker compose -f docker-compose.local.yml down -v && docker compose -f docker-compose.local.yml up -d postgres",
    "local:full": "docker compose -f docker-compose.local.yml up -d",
    "standalone:build": "bun run build:standalone",
    "standalone:package": "bun run standalone:build && bun run package:windows",
    "standalone:dev": "DEPLOYMENT_MODE=standalone IS_STANDALONE_WINDOWS=true bun run dev",
    "package:windows": "bun run scripts/package-windows.js",
    "migration:create": "bun run scripts/create-migration.js",
    "migration:run": "bun run src/lib/run-migrations.ts",
